
@{
    ViewData["Title"] = "Task4";
}

<div class="form-group row col-xl-5 col-lg-7">
    <label for="example-text-input" class="col-xs-2 col-form-label">Первый массив</label>
    <input id="firstArrayInput" type="text" class="form-control" value="1,3,5,7"/>
</div>
<div class="form-group row col-xl-5 col-lg-7">
    <label for="example-text-input" class="col-xs-2 col-form-label">Второй массив</label>
    <input id="secondArrayInput" type="text" class="form-control" value="1,2,3,4,5"/>
</div>
<div class="form-group row col-xl-5 col-lg-7">
    <div class="btn-group">
        <button type="button" id="showResult" class="btn btn-success btn-lg" onclick="getResult()">Получить результат</button>
        <button type="button" id="hideResult" class="btn btn-info btn-lg" onclick="cleanResult()">Очистить результат</button>
    </div>
</div>
<div id="result" class="list-group col-xl-6 col-lg-8">

</div>

<script>
    
    function getResult() {
       
        if ($("#firstArrayInput").val() === '' || $("#secondArrayInput").val() === '') {
            $("#result").html("<h3 class = \"text-danger\">Входная cтрока не может быть пустой</h3>");
            return;
        }
        var link = "@Url.Action("Task4Result","Home")"
            + "?firstCollection=" + $("#firstArrayInput").val()
            + "&secondCollection=" + $("#secondArrayInput").val();

        $.get(link, null, function (data) {

            $("#result").html("<h3 class = \"text-primary\">" + data + "</h3>");
            $("#result").show();
        });
    }
    function cleanResult() {
        $("#result").empty();
    }
</script>

