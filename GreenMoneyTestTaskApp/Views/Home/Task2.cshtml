@{
    ViewData["Title"] = "Task2";
}

<div class="btn-group">
    <button id="showResult" type="button" class="btn btn-success btn-lg" onclick="getResult()">Сгенерировать результат</button>
    <button id="hideResult" type="button" class="btn btn-info btn-lg" onclick="hideResult()">Скрыть результат</button>
</div>
<div id="result" class="list-group col-xl-6 col-lg-8">
    
</div>
<script>
    function getResult() {
        var link = "@Url.Action("Task2Result","Home")";         
        $.get(link, null, function (data) {
            $("#result").html(data);  
            $("#result").show();
        });
    }
    function hideResult() {
        $("#result").hide();
    }
</script>


